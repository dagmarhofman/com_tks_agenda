<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="time_created" type="timecreated" label="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_TIME_CREATED" description="COM_TKS_AGENDA_FORM_DESC_DOWNLOAD_TIME_CREATED" hint="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_TIME_CREATED"/>
    <field name="title" type="text" required="true" label="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_TITLE" description="COM_TKS_AGENDA_FORM_DESC_DOWNLOAD_TITLE" hint="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_TITLE"/>
    <field name="alias" type="hidden" class="inputbox" generator="title" label="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_ALIAS" description="COM_TKS_AGENDA_FORM_DESC_DOWNLOAD_ALIAS" hint="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_ALIAS"/>
    <field name="file" type="FileMultiple" label="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_FILE" description="COM_TKS_AGENDA_FORM_DESC_DOWNLOAD_FILE" hint="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_FILE"/>
    <field name="description" type="textarea" filter="JComponentHelper::filterText" label="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_DESCRIPTION" description="COM_TKS_AGENDA_FORM_DESC_DOWNLOAD_DESCRIPTION" hint="COM_TKS_AGENDA_FORM_LBL_DOWNLOAD_DESCRIPTION"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
